{
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "extends": ["airbnb-base"],
    "env": {
      "node": true,
      "es6": true,
      "mocha": true
    },
    "plugins":["prettier"],
    "rules": {
      "one-var": 0,
      "one-var-declaration-per-line": 0,
      "new-cap": 0,
      "consistent-return": 0,
      "no-param-reassign": 0,
      "comma-dangle": 0,
      "curly": ["error", "multi-line"],
      "import/no-unresolved": [2, { "commonjs": true }],
      "no-shadow": ["error", { "allow": ["req", "res", "err"] }],
      "import/extensions": 0,
      "no-console": 0,
      "import/prefer-default-export": 0,
      "valid-jsdoc": ["error", {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": false,
        "requireReturnDescription": true
      }],
      "require-jsdoc": ["error", {
          "require": {
              "FunctionDeclaration": true,
              "MethodDefinition": true,
              "ClassDeclaration": true
          }
      }]
    }
}
