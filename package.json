{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run lint:fix && npm run undo:migrate && npm run migrate:test",
    "test": "NODE_ENV=test nyc mocha --require @babel/register --require dotenv/config \"tests/**/*.js\" --exit",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "start:dev": "nodemon --exec  node --require @babel/register --require dotenv/config index.js",
    "start": " npm run migrate && node --require @babel/register --require dotenv/config ./index.js",
    "migrate": "./node_modules/.bin/sequelize db:migrate",
    "migrate:test": "NODE_ENV=test npm run migrate",
    "undo:migrate": "NODE_ENV=test sequelize db:migrate:undo:all",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.0",
    "express-jwt": "^6.0.0",
    "express-session": "^1.15.6",
    "generate-password": "^1.4.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "methods": "^1.1.2",
    "nodemailer": "^6.1.1",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "nodemailer-stub-transport": "^1.1.0",
    "nodemon": "^1.18.11",
    "open": "^6.3.0",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth2": "^0.2.0",
    "passport-local": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "request": "^2.87.0",
    "sequelize": "^5.8.6",
    "sequelize-cli": "^5.4.0",
    "sinon": "^7.3.2",
    "slug": "^1.1.0",
    "socket.io": "^2.2.0",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.0.4",
    "underscore": "^1.9.1",
    "uniqid": "^5.0.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1"
  },
  "nyc": {
    "require": [
      "@babel/register",
      "dotenv/config"
    ],
    "reporter": [
      "lcov",
      "text",
      "html"
    ]
  }
}
